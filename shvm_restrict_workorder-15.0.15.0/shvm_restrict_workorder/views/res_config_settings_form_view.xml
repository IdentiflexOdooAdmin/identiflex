<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wo_setting_extend_form_view" model="ir.ui.view">
        <field name="name">wo.setting.extend.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='process_operations_setting_container']" position="inside">
                <div class="col-lg-6 col-12 o_setting_box" id="wo_restriction" title="Restrict the Work Order to start if component status is not available.">
                    <div class="o_setting_left_pane">
                        <field name="group_restrict_wo"/>
                    </div>
                    <div class="o_setting_right_pane" id="workorder_settings">
                        <label for="group_restrict_wo" string="Restrict Work Orders to start"/>
                        <div class="text-muted">
                            Restrict the Work Order to start if component status is not available.
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-12 o_setting_box" id="wo_confirmation_popup" title="Get the confirmation popup when user start the Work Order and component status is not available.">
                    <div class="o_setting_left_pane">
                        <field name="group_confirmation_wo"/>
                    </div>
                    <div class="o_setting_right_pane" id="workorder_settings">
                        <label for="group_confirmation_wo" string="Confirmation on Work Order to start"/>
                        <div class="text-muted">
                            Get the confirmation popup when start the Work Order and component status is not available.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>